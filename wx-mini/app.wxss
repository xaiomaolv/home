/**app.wxss**/
@import "css/main.wxss";
@import "css/icon.wxss";
@import "css/project.wxss";
@import "css/stylesheet.wxss";
@import "css/icbc.wxss";
@import "css/flex.wxss";

page {
  height: 100%;
  font-size: 28rpx;
}

.container {
  min-height: 100%;
  padding-bottom: 150rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: space-between; */
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  /* background-color: #eee; */
  font-size: 32rpx!important;
  color: #484848!important;
  position: relative;
} 

.copy{
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 50rpx;
  left: 0;
  font-size: 26rpx;
  color: rgba(0,0,0,.5);
}
.copy image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -12rpx;
  margin-right:20rpx;
}


.fixed-add{
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 120rpx;
  height:  120rpx;
  line-height: 120rpx;
  background: var(--primary-color);
  color: #FFF;
  border-radius: 50%;
  text-align: center;
  font-size: 68rpx;
  z-index: 9999;
}
.border-top{
  border-top: #eee solid 1px;
}
.border-left{
  border-left: #eee solid 1px;
}
.border-right{
  border-right: #eee solid 1px;
}
.placeholder-color{
  color: #eee;
}
.money{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
}

.lodemore {
  display: inline-block;
  margin-top: 40rpx;
  color: var(--primary-color);
  cursor: pointer;
  letter-spacing: 3px;
  font-weight: 600;
  line-height: 56rpx;
  position: relative;
  padding-left: 60rpx;
}

.cuIcon-loading2 {
  margin-bottom: -100px;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

textarea {
  width: 100%;
  text-align: left;
}