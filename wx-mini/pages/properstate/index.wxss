.tabNav {
  z-index: 4;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  display: flex;
  padding: 0 20rpx;
  border-bottom: 1px solid #dedede;
  box-sizing: border-box;
}

.tabNav> view {
  color: #484848;
  width: 50%;
  text-align: center;
  /* margin-right: 50rpx; */
}

.tabNav> view:last-child {
  margin-right: 0;
}

.tabNav> view text {
  width: 100%;
  /* padding: 0 15rpx; */
  height: 75rpx;
  display: inline-block;
}

.tabNav .cur text {
  /* width: 100%; */
