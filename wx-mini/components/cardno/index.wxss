/* components/showmodal-input/index.wxss */
.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left:0;
  top:0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.modal_box {
  /* width: 76%; */
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 1001;
  background: #FFF;
  transform: translate(-50%,-50%);
  border-radius: 5px;
}
 
.title {
  padding: 15px;
  text-align: left;
  background-color: gazure;
  font-weight: 700;
  position: relative;
}
.close{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 15px;
  right: 15px;
}
 
.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
 
