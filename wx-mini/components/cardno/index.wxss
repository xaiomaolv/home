.cell{
	max-width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	align-content: flex-start;
	background-color: #FFF;
	padding:30rpx  0rpx 20rpx 0rpx;
	border-bottom: 0.0625rem solid  var(--border-color);
